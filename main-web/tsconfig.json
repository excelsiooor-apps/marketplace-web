{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/shared-components/*": ["src/components/shared/*"],
      "@/lib/*": ["src/lib/*"],
    },
    "baseUrl": "./"
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.setup.ts",
    "**/*.setup.js",
    "**/*.d.ts",
    ".eslintrc.js",
    ".babelrc",
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__mock__"
  ]
}
